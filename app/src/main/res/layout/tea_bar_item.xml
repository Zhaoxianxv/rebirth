<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_100dp"
    android:layout_height="match_parent"
    android:id="@+id/tea_bar_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bar_item_title"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="@dimen/margin_25dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/textsize7"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        tools:text="@string/title"/>



    <ProgressBar
        android:id="@+id/bar_one_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginBottom="26dp"
        android:max="100"
        style="@style/VLineLayout"
        android:visibility="visible"
        android:progress="50"
        android:progressDrawable="@drawable/progress_v" />
    <ProgressBar
        android:id="@+id/bar_two_view"
        android:layout_width="49dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/bar_one_view"
        android:layout_marginBottom="26dp"
        android:max="100"
        style="@style/VLineLayout"
        android:visibility="visible"
        android:progress="50"
        android:progressDrawable="@drawable/progress_two" />

    <View
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="1.5dp"
        android:background="@color/black"
        android:layout_above="@id/bar_item_title"/>
    <View
        android:layout_width="@dimen/margin_1dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:layout_marginBottom="27.5dp"
        android:layout_marginLeft="99dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_25dp"
        android:layout_width="@dimen/margin_100dp"
        android:alpha="0.5"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/bar_item_one"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:textSize="@dimen/textsize1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:gravity="center_horizontal|top"
        tools:text="@string/title"/>
    <TextView
        android:id="@+id/bar_item_two"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/textsize1"
        android:layout_marginBottom="26dp"
        android:gravity="center_horizontal|top"
        android:layout_marginLeft="@dimen/margin_50dp"
        tools:text="@string/title"/>
</RelativeLayout>