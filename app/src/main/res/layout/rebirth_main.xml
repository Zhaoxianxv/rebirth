<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/home_bg"
        tools:context="com.yfy.app.RebirthMainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:background="@color/app_color_bg">

        <ImageView
                android:id="@+id/bar_navi"
                android:layout_width="@dimen/margin_45dp"
                android:layout_height="@dimen/margin_45dp"
                android:src="@drawable/head_back"
                android:padding="@dimen/margin_5dp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/margin_3dp"/>
        <TextView
                android:id="@+id/bar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/please_choose"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#3c1e12"
                android:textSize="@dimen/textsize11"
                android:textStyle="bold"/>
        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/bar_menu"
                android:layout_width="@dimen/margin_45dp"
                android:layout_height="@dimen/margin_45dp"

                android:padding="@dimen/margin_8dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/main_oa_set"
                android:tint="#3c1e12"
                android:layout_marginRight="@dimen/margin_5dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_180dp">
        <RelativeLayout
                android:id="@+id/user_login_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100dp"
                android:layout_marginTop="@dimen/margin_5dp"
        >

            <ImageView
                    android:id="@+id/user_head"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_left_calendar_24dp"
                    android:layout_marginLeft="25dp" />
            <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/user_head"
                    android:layout_marginTop="@dimen/margin_25dp"
                    android:textSize="@dimen/textsize9"
                    tools:text="name" />
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/user_tell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_15dp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/user_head"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_below="@id/user_name"
                    android:textSize="@dimen/textsize7"

                    android:background="@drawable/shape_tell_bg"
                    tools:text="13722225555" />

        </RelativeLayout>



        <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@id/user_login_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:background="@drawable/radius5_whitebg"
                android:backgroundTint="#83ffffff"
                android:layout_marginBottom="@dimen/margin_3dp">

            <RelativeLayout
                    android:id="@+id/user_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
            >
                <ImageView
                        android:id="@+id/icon_one"
                        android:src="@mipmap/user_one"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="@dimen/margin_2dp"
                        android:tint="#705850"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/icon_one"
                        android:textColor="#705850"
                        android:drawableTint="#705850"
                        android:textSize="@dimen/textsize6"
                        android:text="设置电话"/>
            </RelativeLayout>

            <View
                    android:layout_width="@dimen/margin_05dp" android:layout_height="match_parent"
                    android:background="@color/Gray"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
            />
            <RelativeLayout
                    android:id="@+id/user_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
            >
                <ImageView
                        android:id="@+id/icon_two"
                        android:src="@mipmap/user_two"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="@dimen/margin_2dp"
                        android:tint="#705850"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/icon_two"
                        android:textColor="#705850"
                        android:drawableTint="#705850"
                        android:textSize="@dimen/textsize6"
                        android:text="设置头像"/>
            </RelativeLayout>

            <View
                    android:layout_width="@dimen/margin_05dp" android:layout_height="match_parent"
                    android:background="@color/Gray"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
            />
            <RelativeLayout
                    android:id="@+id/user_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
            >
                <ImageView
                        android:id="@+id/icon_three"
                        android:src="@mipmap/user_three"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="@dimen/margin_2dp"
                        android:tint="#705850"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/icon_three"
                        android:textColor="#705850"
                        android:drawableTint="#705850"
                        android:textSize="@dimen/textsize6"
                        android:text="设置密码"/>
            </RelativeLayout>
            <View
                    android:layout_width="@dimen/margin_05dp"
                    android:layout_height="match_parent"
                    android:background="@color/Gray"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
            />

            <RelativeLayout
                    android:id="@+id/user_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
            >
                <ImageView
                        android:id="@+id/icon_four"
                        android:src="@mipmap/user_four"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="@dimen/margin_2dp"
                        android:tint="#705850"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/icon_four"
                        android:textColor="#705850"
                        android:drawableTint="#705850"
                        android:textSize="@dimen/textsize6"
                        android:text="退出登录"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:alignmentMode="alignBounds"
            android:padding="@dimen/margin_5dp"
    >


        <RelativeLayout
                android:id="@+id/oa_one"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_130dp"
                android:layout_columnWeight="1"
                android:background="@drawable/radius3_e3bg"
                android:layout_margin="@dimen/margin_5dp"
                android:gravity="center"
                android:backgroundTint="#771771b4">

            <ImageView

                    android:id="@+id/oa_tag_one"
                    android:src="@mipmap/oa_maintain"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/margin_5dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/white"/>

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/oa_tag_one"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize9"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:text="后勤报修"/>
        </RelativeLayout>



        <RelativeLayout
                android:id="@+id/oa_two"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_130dp"
                android:layout_columnWeight="1"
                android:background="@drawable/radius3_e3bg"
                android:layout_margin="@dimen/margin_5dp"
                android:gravity="center"
                android:backgroundTint="#77b48f17">

            <ImageView

                    android:id="@+id/oa_tag_two"
                    android:src="@mipmap/oa_atten"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/margin_5dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/white"/>

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/oa_tag_two"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize9"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:text="请假"/>
        </RelativeLayout>



        <RelativeLayout
                android:id="@+id/oa_three"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_130dp"
                android:layout_columnWeight="1"
                android:background="@drawable/radius3_e3bg"
                android:layout_margin="@dimen/margin_5dp"
                android:gravity="center"
                android:backgroundTint="#77f5641b">

            <ImageView

                    android:id="@+id/oa_tag_three"
                    android:src="@mipmap/oa_apply"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/margin_5dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/white"/>

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/oa_tag_three"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize9"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:text="荣誉申报"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/oa_four"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_130dp"
                android:layout_columnWeight="1"
                android:background="@drawable/radius3_e3bg"
                android:layout_margin="@dimen/margin_5dp"
                android:gravity="center"
                android:backgroundTint="#776b00ed">

            <ImageView

                    android:id="@+id/oa_tag_four"
                    android:src="@mipmap/oa_tj"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/margin_5dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/white"/>

            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/oa_tag_four"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize9"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:text="荣誉统计"/>
        </RelativeLayout>



        <!--<android.support.v7.widget.AppCompatTextView-->
                <!---->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="@dimen/margin_10dp"-->
                <!--android:background="@drawable/radius3_e3bg"-->
                <!--android:gravity="center"-->
                <!--android:backgroundTint="#33000000"-->
                <!--android:drawableTop="@drawable/ic_remove_circle_red_24dp"-->
                <!--android:text=""-->
        <!--/>-->

    </GridLayout>

</LinearLayout>
