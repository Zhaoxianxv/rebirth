<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="140dp"
    android:background="@drawable/radius8_line05gray_bgwhite"
    android:orientation="vertical"
    android:weightSum="3" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="6dp"
        android:text="查询结果"
        android:textColor="@color/app_base_text_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fenban_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:paddingTop="6dp"
        android:text="不阿基得问"
        android:textColor="@color/app_base_text_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/Gainsboro" />


    <TextView
        android:id="@+id/fenban_ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/ok"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:background="@drawable/radius_leftb5_rigthb5"
        android:backgroundTint="@color/app_color_bg"/>
</LinearLayout>